const hashmap=[
    {logo:'A',logoType:'text',url:'https://music.163.com/'},
    {logo:'B',logoType:'text',url:'https://bilibilicom/'}
]
let $last=$('.last')
let $siteList=$('.siteList')
hashmap.forEach(node=>{
    const $li=$(`
    <li><a href="${node.url}">
        <div class="site">
            <div class="logo">${node.logo}</div>
            <div class="link">${node.url}</div>
        </div>
        </a>
   </li>`).insertBefore($last)
})
$('.add').on('click',()=>{
   let url= window.prompt('请输入要添加的网址')
