* {
  box-sizing: border-box;
}
* ::beforeï¼Œ*::after {
  box-sizing: border-box;
}
* {
  margin: 0;
  padding: 0;
}
body {
  background-color: #eee;
}
ol {
  list-style: none;
}
ul {
  list-style: none;
}
a {
  color: inherit;
  text-decoration: none;
}
.globalHeader {
  margin: 20px;
}
.selectForm {
  display: flex;
  justify-content: space-between;
}
.selectForm > input {
  width: 100%;
  margin-right: 28px;
  height: 40px;
  padding: 0 10px;
  border-radius: 4px;

  border: 1px solid #dddddd;
}
.selectForm > button {
  white-space: nowrap;
  width: 80px;
  border: 1px solid #dddddd;
  background: rgba(30, 77, 243, 0.83);
  border-radius: 4px;
  color: white;
  font-size: 18px;
}

.globalMain {
}

.siteList {
  border: 1px solid red;
  display: flex;
  justify-content: space-between;
  margin: 20px;
  flex-wrap: wrap;
}
.siteList > li {
  margin-bottom: 14px;
}
.siteList .site {
  width: 160px;
  background: #ffffff;
  border: 1px solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding-top: 26px;
  padding-bottom: 18px;
}
.siteList .site > .logo {
  width: 64px;
  height: 64px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 64px;
}
.siteList .site > .link {
  font-size: 14px;
  padding-top: 8px;
}
